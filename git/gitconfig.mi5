[init]
    templateDir = ~/.git-template

[log]
    date = local
    decorate = short

[merge]
    ff = false
    log = 1024

[pull]
    ff = only

[push]
    default = current
    followTags = true

[sendemail]
    confirm = compose
    smtpServer = <% SENDMAIL %>

[status]
    short = true

[user]
    name = <% NAME %>
    email = <% EMAIL %>
    signingKey = <% KEY %>
