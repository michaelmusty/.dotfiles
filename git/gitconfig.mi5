[commit]
	status = false

[diff]
	algorithm = patience

[fetch]
	output = compact

[init]
	templateDir = ~/.git-template

[log]
	date = local
	decorate = short

[merge]
	ff = false
	log = 1024

[pull]
	ff = only

[push]
	default = current

[sendemail]
	confirm = compose
	smtpServer = <% SENDMAIL %>

[status]
	short = true

[user]
	name = <% NAME %>
	email = <% EMAIL %>
	signingKey = <% KEY %>
